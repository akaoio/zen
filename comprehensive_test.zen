print "=== Comprehensive ZEN Test ==="

# Test functions
function add a b
    return a + b

print "5 + 3 =" add 5 3

# Test string operations  
set text "hello world"
print "Upper:" upper text
print "Split:" split text " "

# Test arrays
set nums 1, 2, 3
push nums 4
print "Array:" nums

# Test type checking
print "Is 5 a number?" isNumber 5
print "Is 'text' a string?" isString "text"

# Test loops
set i 0
while i < 3
    print "Loop" i
    set i i + 1

# Test conditionals
if 10 > 5
    print "10 is greater than 5"

# Test JSON
set data name "Alice", age 30
print "JSON:" jsonStringify data

# Test math
print "Max of 10 and 20:" max 10 20
print "Abs of -5:" abs -5

print "=== All tests completed ==="
