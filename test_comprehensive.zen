# Test comprehensive ZEN functionality

# Variables
set x 42
set name "ZEN"
set flag true

# Arithmetic
set sum x + 10
set product x * 2
print "Sum: " + sum
print "Product: " + product

# Functions
function greet person
    return "Hello, " + person + "!"

print greet name

# Functions with return values
function add a b
    return a + b

set result add 5 7
print "5 + 7 = " + result

# Control flow
if x > 40
    print "x is greater than 40"
else
    print "x is not greater than 40"

# While loop
set count 0
while count < 3
    print "Count: " + count
    set count count + 1

# Arrays
set numbers 1, 2, 3, 4, 5
print "First number: " + numbers[0]

# String operations  
set message "Hello"
set full_message message + " World"
print full_message

# Boolean operations
set is_valid true & (x > 0)
print "Is valid: " + is_valid

# Comparison
if x = 42
    print "x equals 42"

# Complex expressions
set complex (x + 10) * 2 / 4
print "Complex result: " + complex