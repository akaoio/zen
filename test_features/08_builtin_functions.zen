# Test 8: Built-in Functions
print "=== Testing Built-in Functions ==="

# String functions
set text "Hello World"
print "length: " + text.length
print "toUpperCase: " + text.toUpperCase()
print "toLowerCase: " + text.toLowerCase()
print "substring 0 5: " + text.substring 0 5
print "indexOf 'World': " + text.indexOf "World"
print "replace: " + text.replace "World" "ZEN"

# Array functions
set nums 3, 1, 4, 1, 5
print "Original array: " + nums
print "sorted: " + nums.sort()
print "reversed: " + nums.reverse()
print "joined: " + nums.join ", "

# Math functions
print "abs(-42): " + abs -42
print "max(5, 10): " + max 5 10
print "min(5, 10): " + min 5 10
print "round(3.7): " + round 3.7
print "floor(3.7): " + floor 3.7
print "ceil(3.2): " + ceil 3.2
print "sqrt(16): " + sqrt 16
print "pow(2, 3): " + pow 2 3

# Type checking
print "type of 42: " + type 42
print "type of 'hello': " + type "hello"
print "type of true: " + type true
print "type of [1,2,3]: " + type [1, 2, 3]

# JSON operations
set obj name "Test", value 123
print "JSON.stringify: " + JSON.stringify obj
set parsed JSON.parse '{"x": 100}'
print "JSON.parse: " + parsed