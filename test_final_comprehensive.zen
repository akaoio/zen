# Comprehensive test of ZEN language features
print "=== ZEN Language Comprehensive Test ==="

# Basic variables and arithmetic
set x 10
set y 20
set result x + y * 2
print "Arithmetic: " + result

# String operations
set message "Hello ZEN"
print "Original: " + message
print "Uppercase: " + upper(message)
print "Length: " + len(message)

# Math functions
print "Math functions:"
print "abs(-5): " + abs(-5)
print "sqrt(16): " + sqrt(16)
print "pow(2, 3): " + pow(2, 3)

# Conditionals
if result > 30
    print "Result is large: " + result
else
    print "Result is small: " + result

# Functions
function greet name, age
    return "Hello " + name + ", you are " + age + " years old"

set greeting greet("Alice", 25)
print greeting

# Arrays
set numbers 1, 2, 3, 4, 5
print "Numbers: " + numbers

# Objects
set person name "Bob", age 30, city "NYC"
print "Person: " + person.name + " from " + person.city

# Type conversion
set str_num "42"
set converted_num toNumber(str_num)
print "Converted: " + converted_num + " (type: " + typeOf(converted_num) + ")"

print "=== Test Complete ==="